{
    "openapi": "3.0.0",
    "info": {
        "title": "to-do-api Documentation",
        "description": "Documentação de um to-do",
        "version": "1.0.0",
        "contact": {
            "email": "jvitormoreirad@hotmail.com"
        }
    },
    "paths": {
        "/auth/singIn": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Faz autenticação do usuário",
                "description": "Recebe o email e senha para efetuar o login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/requestAuth"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/responseAuth"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao efetuar login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "message": "Email ou senha incorretos"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/singUp": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Faz cadastro de um usuário",
                "description": "Recebe o email, senha e nome para efetuar o cadastro",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/requestCreateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso"
                    },
                    "400": {
                        "description": "Email já em uso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "message": "Email já em uso"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "requestAuth": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "email": "jvitormoreirad@hotmail.com",
                "password": "*******"
            }
        },
        "responseAuth": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                }
            },
            "example": {
                "token": "XXXXXXXXX"
            }
        },
        "requestCreateUser": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "name": "João",
                "email": "jvitormoreirad@hotmail.com",
                "password": "*******"
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}